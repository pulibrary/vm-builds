# Preferred Rocky Linux mirrors (Princeton)
# Lower cost => preferred by DNF when multiple mirrors exist
[rocky-baseos-princeton]
name=Rocky Linux $releasever - BaseOS (Princeton)
baseurl=http://{{ princeton_mirror_host }}/pub/rocky/$releasever/BaseOS/$basearch/os/
enabled=1
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-rockyofficial
skip_if_unavailable=False
cost=10

